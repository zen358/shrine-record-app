<%# 参拝記録一覧（仮実装） %>
<div class="container py-4">
  <h2>参拝記録一覧</h2>

  <%= link_to "新規登録", new_shrine_record_path, class: "btn btn-success mb-3" %>

  <% if @shrine_records.any? %>
    <ul class="list-group">
      <% @shrine_records.each do |record| %>
        <li class="list-group-item">
          <strong><%= record.shrine_name %></strong>
            (<%= record.visited_on.strftime("%Y年%m月%d日") %>)
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-muted">まだ参拝記録がありません。</p>
  <% end %>
</div>